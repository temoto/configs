#!/bin/sh

mkdir -p $HOME/aur
cd $HOME/aur

(
    rm -rf ./cower
    curl -L 'https://aur.archlinux.org/packages/co/cower/cower.tar.gz' |tar xzf -
    cd cower
    makepkg -s
    sudo pacman -U --noconfirm cower*.tar.xz
)

(
    rm -rf ./pacaur
    curl -L 'https://aur.archlinux.org/packages/pa/pacaur/pacaur.tar.gz' |tar xzf -
    cd pacaur
    makepkg -s
    sudo pacman -U --noconfirm pacaur*.tar.xz
)

